@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center m-0 loginPage">
    <div class="col-10 col-md-7 col-lg-3 offset-lg-7">
        <form method="post">
            <div class="form-group mb-2">
                <label asp-for="Input.Login" class="login text-light"></label>
                <div class="group">
                    <i class="bi bi-person-fill text-primary"></i>
                    <input asp-for="Input.Login" class="form-control shadow-none login @(@ViewData.ModelState.IsValid ? "" : "is-invalid")" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="login text-light"></label>
                <div class="group">
                    <i class="bi bi-lock-fill text-primary"></i>
                    <input asp-for="Input.Password" type="password" class="form-control shadow-none login @(@ViewData.ModelState.IsValid ? "" : "is-invalid")" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3 login">Log in</button>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
