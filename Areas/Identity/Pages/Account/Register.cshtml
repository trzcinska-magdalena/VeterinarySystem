@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3">
            <label asp-for="Input.Login">Login</label>
            <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="Input.Admin" class="form-check-input" type="checkbox">
            <label asp-for="Input.Admin" class="form-check-label">Admin</label>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
